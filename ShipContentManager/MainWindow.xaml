<Window x:Class="ShipContentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShipContentManager"
        mc:Ignorable="d"
        Title="Ship Content Manager" Height="602" Width="918">
    <Window.Resources>

        <Storyboard x:Key="sbShowHamburgerMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-120,40,0,0" To="0,40,0,0" DecelerationRatio=".9" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="sbHideHamburgerMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,40,0,0" To="-120,40,0,0" AccelerationRatio=".9" Duration="0:0:0.3" />
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="mainGrid" Initialized="mainGrid_Initialized">
        <Grid Background="#e8175d" VerticalAlignment="Top" Height="40">
        </Grid>
        <StackPanel Panel.ZIndex="2" Name="pnlLeftMenu" Orientation="Horizontal" HorizontalAlignment="Left" Margin="-120,40,0,0" VerticalAlignment="Stretch">
            <Border BorderBrush="#000000" BorderThickness="1" Width="150" Background="#474747">
                <Grid x:Name="SlideTrayGrid">
                    <Button x:Name="btnPacks" HorizontalAlignment="Center" VerticalAlignment="Top" Width="148" Height="20" Margin="0,50,0,0" Visibility="Hidden" Content="Packs" Background="#363636" Click="btnPacks_Click" Foreground="White" BorderBrush="#FFE8175D" />
                    <Button x:Name="btnQuestions" HorizontalAlignment="Center" VerticalAlignment="Top" Width="148" Height="20" Margin="0,80,0,0" Visibility="Hidden" Content="Questions" Background="#363636" Click="btnQuestions_Click" Foreground="White" BorderBrush="#FFE8175D" />
                    <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch">
                        <Button x:Name="btnHamburger" Width="30" Height="30" Click="btnHamburger_Click" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}">
                            <Image Source="/Images/hamburger.png" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>

        <ScrollViewer x:Name="MainWindowScrollView" Margin="30,40,0,0" GotFocus="MainWindowScrollView_GotFocus">
            <WrapPanel x:Name="contentWrapPanel"/>
        </ScrollViewer>

    </Grid>
</Window>
