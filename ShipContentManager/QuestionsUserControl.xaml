<UserControl x:Class="ShipContentManager.QuestionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipContentManager"
             mc:Ignorable="d" 
             Height="150" Width="250">
    <Grid Background="#474747">
        <Grid Margin="0,0,0,125" Background="#FFE8175D">
            <Label x:Name="lblQuestionNumber" Foreground="Black" Content="&lt;Question Number&gt;" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <TextBlock x:Name="txtblockQuestionText" Text="&lt;Question Text&gt;" TextWrapping="Wrap" Margin="5,30,5,68" Foreground="White"/>
        <Label x:Name="lblDateCreated" Content="Date Created" Margin="0,127,0,0" VerticalAlignment="Top" Foreground="White" FontSize="10" HorizontalContentAlignment="Left"/>
        <Label x:Name="lblPackNames" Content="Pack Names" Margin="0,104,0,0" VerticalAlignment="Top" Foreground="White" FontSize="10" HorizontalContentAlignment="Left"/>
    </Grid>
</UserControl>
