<UserControl x:Class="ShipContentManager.PacksUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipContentManager"
             mc:Ignorable="d" Height="100" Width="150">
    <Grid Background="#474747">
        <Grid Margin="0,0,0,76" Background="#FFE8175D">
            <Label x:Name="lblPackName" Foreground="Black" Content="&lt;Pack Name&gt;" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <CheckBox Content="Is Mini Pack" HorizontalAlignment="Stretch" Margin="0,29,0,0" VerticalAlignment="Top" Foreground="White" FontSize="10" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <Label x:Name="lblDateCreated" Content="Date Created" HorizontalAlignment="Stretch" Margin="0,44,0,0" VerticalAlignment="Top" Foreground="White" FontSize="10" HorizontalContentAlignment="Left"/>
    </Grid>
</UserControl>
